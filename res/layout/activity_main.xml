<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <com.astuetz.PagerSlidingTabStrip
        android:id="@+id/tabs"
        android:layout_width="match_parent"
        android:layout_height="48dip" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <android.support.v4.view.ViewPager
            android:id="@+id/main_viewPager"
            android:layout_above="@+id/layout_bottom"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >
        </android.support.v4.view.ViewPager>

        <LinearLayout
            android:id="@+id/layout_bottom"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:background="#33000000"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/main_btn_timer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/main_btn_selector"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/main_timer" />
            </LinearLayout>
            <View android:layout_width="1dp" android:layout_height="56dp"
              android:background="@drawable/main_divider_vertical" android:layout_gravity="center"
                />

            <LinearLayout
                android:id="@+id/main_btn_play"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/main_btn_selector"
                android:gravity="center" >

                <ImageView
                    android:id="@+id/main_iv_play"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/main_play" />
            </LinearLayout>
            
            <View android:layout_width="1dp" android:layout_height="56dp"
              android:background="@drawable/main_divider_vertical" android:layout_gravity="center"
                />
            

            <LinearLayout
                android:id="@+id/main_btn_download"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/main_btn_selector"
                android:gravity="center" >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/main_download" />
            </LinearLayout>
        </LinearLayout>
        
        <LinearLayout android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/main_viewPager"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="24dp"
            android:layout_marginLeft="32dp"
            android:background="#33000000"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:id="@+id/main_layout_timer"
            android:visibility="invisible"
            >
            
            <TextView
            android:id="@+id/main_tv_timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00"
            android:textAppearance="?android:attr/textAppearanceLarge" />
        </LinearLayout>

        

    </RelativeLayout>

</LinearLayout>